version: '3.8'
services:
  web:
    image: nginx:latest
    secrets:
      - stack_secret_{{ item }}
    configs:
      - source: stack_config_{{ item }}
        target: /mnt/stack_config.conf
    volumes:
      - stack_volume:/data
    deploy:
      replicas: 10
      restart_policy:
        condition: on-failure
    networks:
      - webnet

secrets:
  stack_secret_{{ item }}:
    external: true

configs:
  stack_config_{{ item }}:
    external: true

volumes:
  stack_volume:

networks:
  webnet:
